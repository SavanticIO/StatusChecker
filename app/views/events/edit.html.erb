<h1>Edit Event</h1>
 
<%= form_with(model: @event) do |form| %>
 <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited
        this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
 <p>
  	<%= form.label :status %>
  	<%= form.select :status, [['Hot','hot'],['Medium','medium'],['Cold','cold']]%>
  </p>
  <p>
  	
    <%= select_datetime Time.now, prefix: :event %>
  </p>
  <p>
  	<%= form.label :resolved %>
  	<%= form.select :resolved, [['Active','false'],['Resolved','true']]%>
  </p>
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', events_path %>