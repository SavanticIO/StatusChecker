<h1>Status Checker</h1>
<%= link_to 'List of All Scheduled Events', controller: 'events' %>
<%= link_to 'List of All  Resolved Scheduled Events', controller: 'resolved' %>
<p>List of Active Events</p>
<table>
	<tr>
  	<th>Status</th>
    <th>Title</th>
    <th>Date Scheduled</th>
    <th>Resolved</th>
  </tr>
	<% @active.each do |event| %>
    <tr>
      <td><%= event.status %></td>	
      <td><%= link_to event.title, event_path(event) %></td>
      <td><%= event.datetime%></td>
      <td><%= event.resolved%></td>
    </tr>
  <% end %>
</table>
<p>List of Future Events</p>
<table>
	<tr>
  	<th>Status</th>
    <th>Title</th>
    <th>Date Scheduled</th>
    <th>Resolved</th>
  </tr>
	<% @future.each do |event| %>
    <tr>
      <td><%= event.status %></td>	
      <td><%= link_to event.title, event_path(event) %></td>
      <td><%= event.datetime%></td>
      <td><%= event.resolved%></td>
    </tr>
  <% end %>
</table>
